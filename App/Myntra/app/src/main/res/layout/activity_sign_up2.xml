<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".Login.SignUpActivity">

    <ImageView
        android:id="@+id/signUpMyntraLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_myntra" />


    <LinearLayout
        android:id="@+id/layout123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rectanglee"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:paddingRight="10dp"
        android:paddingBottom="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpMyntraLogo">


        <EditText
            android:id="@+id/signUpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="Enter Name"
            android:padding="10dp" />

        <EditText
            android:id="@+id/signUpEmail"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="Enter email Id"
            android:padding="10dp" />

        <EditText
            android:id="@+id/signUpPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="Enter Phone Number"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/signUpPassword"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <EditText
            android:id="@+id/signUpRePassword"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="Re-enter Password"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/cbSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Accept Terms and Conditions"
            android:textColor="#1B1B1B" />

        <TextView
            android:id="@+id/agreePermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Agree Terms and Conditions to Continue"
            android:textColor="@color/red"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectanglee"
        android:padding="20dp"
        android:text="SignUp"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/layout123"
        app:layout_constraintEnd_toEndOf="@id/layout123"
        app:layout_constraintStart_toStartOf="@id/layout123"
        app:layout_constraintTop_toTopOf="@id/layout123" />

    <Button
        android:background="@drawable/btn_radius"
        android:paddingLeft="80dp"
        android:paddingTop="5dp"
        android:paddingRight="80dp"
        android:id="@+id/signUpAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="5dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/layout123"
        app:layout_constraintEnd_toEndOf="@id/layout123"
        app:layout_constraintStart_toStartOf="@id/layout123"
        app:layout_constraintTop_toBottomOf="@id/layout123"
        android:text="Sign UP"
        android:textColor="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>