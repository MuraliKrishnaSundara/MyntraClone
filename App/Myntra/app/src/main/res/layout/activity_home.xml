<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <View
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="@id/dehaze"
        app:layout_constraintTop_toTopOf="@id/dehaze" />

    <ImageView
        android:id="@+id/dehaze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:src="@drawable/ic_dehaze"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_myntra"
        app:layout_constraintBottom_toBottomOf="@id/dehaze"
        app:layout_constraintStart_toEndOf="@id/dehaze"
        app:layout_constraintTop_toTopOf="@id/dehaze" />

    <ImageView
        android:id="@+id/cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_cart"
        app:layout_constraintBottom_toBottomOf="@id/dehaze"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/dehaze" />

    <ImageView
        android:id="@+id/favourite"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="15dp"
        android:src="@drawable/heartblack"
        app:layout_constraintBottom_toBottomOf="@id/dehaze"
        app:layout_constraintEnd_toStartOf="@id/cart"
        app:layout_constraintTop_toTopOf="@id/dehaze" />

    <ImageView
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:src="@drawable/ic_notification"
        app:layout_constraintBottom_toBottomOf="@id/dehaze"
        app:layout_constraintEnd_toStartOf="@id/favourite"
        app:layout_constraintTop_toTopOf="@id/dehaze" />

    <ImageView
