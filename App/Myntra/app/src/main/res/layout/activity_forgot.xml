<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgotActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/back2" />

    <TextView
        android:id="@+id/tvResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset password"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:id="@+id/hintText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email or mobile number so that we will verify your id"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email or Mobile Number*"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectanglee"
            android:padding="15dp"
            />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Password Remembered"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectanglee"
        android:padding="15dp"
        />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Last Password Remembered"
    android:layout_marginHorizontal="40dp"
    android:layout_marginTop="40dp"
    android:background="@drawable/rectanglee"
    android:padding="15dp"
    android:text="Reset Password"
    android:textColor="@color/white"
    android:backgroundTint="#DC143C"
    />
</LinearLayout>